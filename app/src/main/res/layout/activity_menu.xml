<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    tools:context="com.pentavalue.yousry.rakaislamicapp.kotlin.activities.MenuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPaleBrown"
        app:navigationIcon="@drawable/ic_left_white_arrow">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="اختيارات"

            android:textColor="@color/whiteColor"
            android:textSize="16sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/whiteColor"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/friday_prayer_item"
                    android:orientation="horizontal"
                    android:background="@color/whiteColor"
                    android:padding="10dp"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start|end"
                        android:src="@drawable/ic_mosque"
                        android:layout_weight="0.8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Gom3aPrayer"
                        android:textSize="16sp"
                        android:layout_weight="0.2"
                        android:layout_gravity="start|end"
                        android:gravity="start|end|center"
                        android:textColor="@color/colorDarkJungleGreen"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/colorIsabelline"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/eid_prayer_item"
                    android:background="@color/whiteColor"
                    android:padding="10dp"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|start"
                        android:src="@drawable/ic_mosque"
                        android:layout_weight="0.8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/EidPrayer"
                        android:textSize="16sp"
                        android:layout_weight="0.2"
                        android:layout_gravity="start|end"
                        android:gravity="start|end|center"
                        android:textColor="@color/colorDarkJungleGreen"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/colorIsabelline"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/whiteColor"
                    android:id="@+id/funeral_prayer_item"
                    android:padding="10dp"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|start"
                        android:src="@drawable/ic_mosque"
                        android:layout_weight="0.8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/GanazaPrayer"
                        android:textSize="16sp"
                        android:layout_weight="0.2"
                        android:layout_gravity="start|end"
                        android:gravity="start|end|center"
                        android:textColor="@color/colorDarkJungleGreen"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/colorIsabelline"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/taraweeh_prayer_item"
                    android:background="@color/whiteColor"
                    android:padding="10dp"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|start"
                        android:src="@drawable/ic_mosque"
                        android:layout_weight="0.8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/Tarawy7Prayer"
                        android:textSize="16sp"
                        android:layout_weight="0.2"
                        android:layout_gravity="start|end"
                        android:gravity="start|end|center"
                        android:textColor="@color/colorDarkJungleGreen"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country_item"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="start|end"
                android:background="@color/whiteColor"
                android:padding="10dp"
                android:weightSum="15">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|start"
                    android:src="@drawable/ic_icon_earth"
                    android:layout_weight="6"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/country_text_view"
                    android:textSize="16sp"
                    android:layout_weight="3"
                    android:layout_gravity="start|end"
                    android:gravity="start|end|center"
                    android:textColor="@color/colorDarkJungleGreen"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="start|end|center"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/ic_right_arrow"
                    android:drawableRight="@drawable/ic_right_arrow"
                    android:textColor="@color/colorDarkJungleGreen"
                    android:text="مكة"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/whiteColor"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/about_item"
                    android:orientation="horizontal"
                    android:background="@color/whiteColor"

                    android:padding="10dp"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|start"
                        android:src="@drawable/icon_info"
                        android:layout_weight="0.8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/app_about"
                        android:textSize="16sp"
                        android:layout_weight="0.2"
                        android:layout_gravity="start|end"
                        android:gravity="start|end|center"
                        android:textColor="@color/colorDarkJungleGreen"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/colorIsabelline"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                </View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/share_item"
                    android:orientation="horizontal"
                    android:layout_gravity="start|end"
                    android:background="@color/whiteColor"
                    android:padding="10dp"
                    android:weightSum="1">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end|start"
                        android:src="@drawable/icon_network"
                        android:layout_weight="0.8"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/app_share"
                        android:textSize="16sp"
                        android:layout_weight="0.2"
                        android:layout_gravity="start|end"
                        android:gravity="start|end|center"
                        android:textColor="@color/colorDarkJungleGreen"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@null"

                android:layout_gravity="center"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|start"

                    android:src="@drawable/icon_vector_facebook"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="end|start"

                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_vector_twitter"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|start"

                    android:src="@drawable/icon_vector_instagram"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
