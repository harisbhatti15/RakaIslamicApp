<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_gravity="center"

    android:background="@drawable/bg_white"
    android:orientation="vertical"


    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/circle_world_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/textview_dialog"
            android:textColor="@color/blackColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|top"
            android:padding="5dp"
            android:text="@string/textview_dialog_choose"
            android:textColor="@color/very_dark_gray"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/whiteColor"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/button_change"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|end"
                android:layout_weight="0.48"
                android:background="@color/colorPaleBrown"
                android:text="@string/button_dialog_change_country"
                android:textColor="@color/whiteColor"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start|end"
                android:layout_weight="0.48"
                android:background="@color/colorPaleBrown"
                android:gravity="center"
                android:text="@string/button_dialog_cancel"
                android:textColor="@color/whiteColor"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>